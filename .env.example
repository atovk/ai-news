# 应用配置
APP_NAME=AI News
VERSION=0.1.0
DEBUG=True

# 数据库配置
DATABASE_URL=sqlite:///./data/database/ai_news.db

# Redis配置 (可选)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=False

# LLM配置
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:latest

# API密钥 (可选)
OPENAI_API_KEY=

# 安全配置
# REQUIRED: 生成强随机密钥，至少32字符
# 生成方法: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# REQUIRED: 设置强管理员密码
# 要求: 至少12字符，包含大小写字母、数字和特殊字符
ADMIN_PASSWORD=

# 新闻抓取配置
DEFAULT_FETCH_INTERVAL=3600
MAX_ARTICLES_PER_SOURCE=50
