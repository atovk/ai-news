# 应用配置
APP_NAME=AI News
VERSION=0.1.0
DEBUG=False

# 数据库配置
DATABASE_URL=sqlite:///./data/database/ai_news.db

# Redis配置 (可选)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=False

# LLM配置 - Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:latest
OLLAMA_TIMEOUT=60

# OpenAI配置
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1

# 火山引擎配置
HUOSHAN_API_KEY=
HUOSHAN_SECRET_KEY=
HUOSHAN_MODEL=ep-xxx

# 阿里千问配置
QIANWEN_API_KEY=
QIANWEN_MODEL=qwen-turbo

# LLM处理配置
DEFAULT_LLM_PROVIDER=ollama
SUMMARY_TARGET_LENGTH=400
BATCH_PROCESS_SIZE=50
MAX_RETRIES=3
ENABLE_LLM_FALLBACK=True

# LLM异步处理超时配置
LLM_ASYNC_TIMEOUT=120
LLM_BATCH_TIMEOUT=300
LLM_SINGLE_TIMEOUT=60

# 安全配置
SECRET_KEY=your-secret-key-change-in-production
ADMIN_PASSWORD=admin123
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 新闻抓取配置
DEFAULT_FETCH_INTERVAL=3600
MAX_ARTICLES_PER_SOURCE=50

# API限流配置
RATE_LIMIT_PER_MINUTE=60
