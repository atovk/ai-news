# 应用配置
APP_NAME=AI News
VERSION=0.1.0
DEBUG=False

# 数据库配置
DATABASE_URL=sqlite:///./data/database/ai_news.db

# Redis配置 (可选)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=False

# LLM配置 - Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:latest
OLLAMA_TIMEOUT=60

# OpenAI配置
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1

# 火山引擎配置
HUOSHAN_API_KEY=
HUOSHAN_SECRET_KEY=
HUOSHAN_MODEL=ep-xxx

# 阿里千问配置
QIANWEN_API_KEY=
QIANWEN_MODEL=qwen-turbo

# LLM处理配置
DEFAULT_LLM_PROVIDER=ollama
SUMMARY_TARGET_LENGTH=400
BATCH_PROCESS_SIZE=50
MAX_RETRIES=3
ENABLE_LLM_FALLBACK=True

# LLM异步处理超时配置
LLM_ASYNC_TIMEOUT=120
LLM_BATCH_TIMEOUT=300
LLM_SINGLE_TIMEOUT=60

# 安全配置
# REQUIRED: 生成强随机密钥，至少32字符
# 生成方法: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# REQUIRED: 设置强管理员密码
# 要求: 至少12字符，包含大小写字母、数字和特殊字符
ADMIN_PASSWORD=

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS配置
# 开发环境：留空使用默认本地开发来源
# 生产环境：设置允许的来源，多个来源用逗号分隔
# 例如：ALLOWED_ORIGINS=https://example.com,https://app.example.com
ALLOWED_ORIGINS=

# 新闻抓取配置
DEFAULT_FETCH_INTERVAL=3600
MAX_ARTICLES_PER_SOURCE=50

# API限流配置
RATE_LIMIT_PER_MINUTE=60
